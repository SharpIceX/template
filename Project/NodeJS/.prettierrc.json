{
	"semi": true,
	"tabWidth": 4,
	"useTabs": true,
	"endOfLine": "lf",
	"printWidth": 120,
	"singleQuote": true,
	"bracketSpacing": true,
	"jsxSingleQuote": true,
	"trailingComma": "all",
	"arrowParens": "always",
	"bracketSameLine": true,
	"proseWrap": "preserve",
	"objectWrap": "preserve",
	"checkIgnorePragma": true,
	"quoteProps": "as-needed",
	"singleAttributePerLine": false,
	"vueIndentScriptAndStyle": false,
	"embeddedLanguageFormatting": "auto",
	"htmlWhitespaceSensitivity": "strict",
	"plugins": ["prettier-plugin-toml"],
	"overrides": [
		{
			"files": ["*.md", "*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
