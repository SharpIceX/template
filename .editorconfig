root = true

[*]
tab_width = 4
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
quote_type = single
max_line_length = 120
indent_brace_style = K&R
spelling_language = zh-CN
insert_final_newline = true
continuation_indent_size = 4
spaces_around_brackets = both
spaces_around_operators = true
curly_bracket_next_line = false
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
indent_style = space
